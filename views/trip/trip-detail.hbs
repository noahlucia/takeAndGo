<div class="container">


  <aside class="user-inf">
    <a href="/user/edit"><i class="fas fa-user"></i>My Account</a>
    <a href="/trip/list">Find Car</a>
    <a href="/trip/add">Sharing Car</a>
    <a href="/trip/edit">My Trip</a>


  </aside>

  <div class="container-med">

    <div class="trip">
      <h2>{{trip.title}}</h2>
      <div class="details-box pick">
        <h3>Pick up location</h3>
        <p id="origin">{{trip.origin}}</p>
        <p>{{date}} {{trip.time}}</p>

      </div>

      <div class="details-box drop">
        <h3>Drop off location</h3>
        <p id='destin'>{{trip.destination}}</p>
        <p>{{date}} {{trip.time}}</p>


      </div>

      <div class="trip-info">

        <p>Pasajeros: {{trip.passengers}}</p>
        <p>Fumador: {{smoker}}</p>
        <p>Coche: {{trip.carType}}</p>
        <p>Descripción: {{trip.description}}</p>

      </div>

      {{#if owner}}
      <p>{{trip.creatorID}}</p>
      {{/if}}

      {{#each trip.comment}}
      <p>{{this}}</p>
      {{/each}}


      {{#if owner}}
      <a href="/trip/edit/{{trip._id}}">Editar viaje</a>
      {{/if}}

      {{#if user}}

