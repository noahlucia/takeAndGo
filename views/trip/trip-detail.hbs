<div class='container'>
  <div class="lateral">


    <aside class='user-inf'>
      <a href='/edit/{{user._id}}'><i class="fas fa-user-circle"></i> My Account</a>
      <a href='/trip/list'><i class="fas fa-car"></i> Find Car</a>
      <a href='/trip/add'><i class="fas fa-taxi"></i> Sharing Car</a>
      <a href='/trip/detail/{{user._id}}'><i class="fas fa-map-marked-alt"></i> My Trip</a>
    </aside>
  </div>
  <div class='container-med'>

    <div class='trip'>
      <h2>{{trip.title}}</h2>
      <div class='details-box pick'>
        <h3>Pick up location</h3>
        <p id='origin'>{{trip.origin}}</p>
        <p>{{date}} {{trip.time}}</p>

      </div>

      <div class='details-box drop'>
        <h3>Drop off location</h3>
        <p id='destin'>{{trip.destination}}</p>
        <p>{{date}} {{trip.time}}</p>


      </div>

      <div class='trip-info'>

        <p><span>Pasajeros:
            {{#each trip.passengers}} </span>{{username}}</p>{{/each}}
        <p><span>Fumador: </span>{{smoker}}</p>
        <p><span>Coche: </span>{{trip.carType}}</p>
        <p><span>Descripción:</span> {{trip.description}}</p>

      </div>


      {{#if user}}

      <a href="/trip/join/{{trip._id}}" class="button">Join </a> {{/if}} {{#if owner}} <p>{{trip.creatorID}}</p>
      {{/if}}
      {{#each trip.comment}} <p>{{this}}</p>
      {{/each}}

      {{#if message}}
      <div class="mgs">
        {{message}}
      </div>
      {{/if}}

      {{#if owner}}
      <a href='/trip/edit/{{trip._id}}'>Editar viaje</a> {{/if}} {{#if user}} {{!-- <div class='form-group'>
     <h3>Comentarios</h3>
