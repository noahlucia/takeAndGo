<div class='container'>
  <aside class='user-inf'>
    <a href='/edit/{{user._id}}'><i class="fas fa-user-circle"></i> My Account</a>
    <a href='/trip/list'><i class="fas fa-car"></i> Find Car</a>
    <a href='/trip/add'><i class="fas fa-taxi"></i> Sharing Car</a>
    <a href='/trip/detail/{{user._id}}'><i class="fas fa-map-marked-alt"></i> My Trip</a>
  </aside>

  <div class='container-med'>

    <div class="box-left">
      <form action="/edit/{{user._id}}" method="post" class="form-user" enctype="multipart/form-data">
        <h2>Edit login info</h2>
        <div class="form-group user-label">
          <label for="username"><i class="fas fa-user-circle"></i> Username</label>
          <input type="text" name="username" class="form-control" value="{{user.username}}">
        </div>

        <div class="form-group user-label">
          <label for="password"><i class="fas fa-unlock-alt"></i> Password</label>
          <input type="password" name="password" class="form-control" placeholder="&#xf13e;   password">
        </div>
        <div class="user-info">
          <h2>Perfil Information</h2>

          <p><i class="fas fa-user-circle"></i> <span>Usename:</span> {{user.username}}</p>
          <p><i class="fas fa-users"></i> <span>Full Name:</span> {{user.firstName}} {{user.lastName}}</p>
          <p><i class="fas fa-envelope"></i> <span>Email:</span> {{user.email}}</p>
          <p><i class="fas fa-phone-square"></i> <span>Phone:</span> {{user.phone}}</p>
        </div>
    </div>



    <div class="box-right">
      <h2>Edit personal info</h2>

      <div class="form-group user-label">
        <label for="firstName"><i class="fas fa-user"></i> First Name</label>
        <input type="text" name="firstName" class="form-control" value="{{user.firstName}}">
      </div>
      <div class="form-group user-label">
        <label for="lastName"><i class="far fa-user"></i> Last Name</label>
        <input type="text" name="lastName" class="form-control" value="{{user.lastName}}">
      </div>
      {{!-- <div class="form-group">
        <label for="homeAddress">Home Address</label>
        <input type="text" name="homeAddress" class="form-control" value="{{user.homeAddress}}">
      </div>
      <div class="form-group">
        <label for="workAddress">Work Address</label>
        <input type="text" name="workAddress" class="form-control" value="{{user.workAddress}}">
      </div> --}}
      <div class="form-group user-label">
        <label for="phone"><i class="fas fa-phone-square"></i> Phone</label>
        <input type="number" name="phone" class="form-control" value="{{user.phone}}">
      </div>
      <div class="form-group user-label">
        <label for="email"><i class="fas fa-envelope"></i> Email</label>
        <input type="text" name="email" class="form-control" value="{{user.email}}">
      </div>

      <div class="form-group user-label">
        <label for="photo"><i class="fas fa-image"></i> Imagen</label>
        <input type="file" name="photo"><br><br>
      </div>

      <button type="submit">Edit</button>

      </form>
    </div>
  </div>

</div>
